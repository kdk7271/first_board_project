{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    {{#articles}}
    <tbody>
    <tr>
        <td>{{id}}</td>
        <td><a href="/articles/{{id}}">{{title}}</a></td>
        <td>{{content}}</td>
    </tr>
    </tbody>
    {{/articles}}
</table>
<a href="/articles/new">New Article</a>


<!-- 페이지네이션-->
<nav aria-label="page">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="?page=0">first</a></li>
        {{#previous}}
        <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a></li>
        {{/previous}}

        {{#present}}
        <li class="page-item"><a class="page-link" href="?page={{present}}">{{present}}</a></li>
        {{/present}}

        {{#next}}
            <!-- check=>if 문 로 마지막 페이지면 next 버튼 비활성화-->
            {{#check}}
                <li class="page-item"><a class="page-link" href="?page={{next}}">{{next}}</a></li>
                {{#nextnext}}
                    <li class="page-item"><a class="page-link" href="?page={{nextnext}}">{{nextnext}}</a></li>
                {{/nextnext}}
        <li class="page-item"><a class="page-link" href="?page={{next}}">next</a></li>
            {{/check}}

            {{#lastpage}}
            <li class="page-item"><a class="page-link" href="?page={{lastpage}}">end</a></li>
            {{/lastpage}}
            {{^check}}
                <li class="page-item disabled"><a class="page-link" href="?page={{next}}">next</a></li>
            {{/check}}

        {{/next}}
    </ul>
</nav>




{{>layouts/footer}}


